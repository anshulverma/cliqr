<%= command %><% unless description.nil? || description.empty? %> -- <%= description %><% end %>

USAGE:
    <%= command %><%=
    ' [actions]' if actions? %><%=
    ' [options]' if options? %><%=
    ' [arguments]' if arguments? %><%

if options? %>

Available options:
<%
   options.each { |option|
%>
    --<%=
         '[no-]' if option.boolean? && option.name != 'help'
       %><%=
         option.name
       %><%=
            ", -#{option.short}" if option.short?
          %><%=
            if option.details?
              "  : #{" <#{option.type}>" if option.type? && !option.help?}#{" #{option.description}" if option.description?}#{" (default => #{option.default.inspect})" if option.default?}"
            end
          %><%
   }
end

if actions? %>

Available actions:
<%= "[ Type \"#{command} help [action-name]\" to get more information about that action ]\n" if help? %><%
   actions.each { |action|
%>
    <%= action.name %><%= " -- #{action.description}" if action.description? %>
<%
   }
%>
<% end %>
