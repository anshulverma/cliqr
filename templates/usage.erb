<%= name %><% unless description.nil? || description.empty? %> -- <%= description %><% end %>

USAGE:
    <%= name %><%=
    ' [actions]' if actions? %><%=
    ' [options]' if options? %><%=
    ' [arguments]' if arguments? %><%

if options? %>

Available options:
<%
   options.each { |option|
%>
    --<%=
         '[no-]' if option.boolean?
       %><%=
         option.name
       %><%=
            ", -#{option.short}" if option.short?
          %><%=
            if option.details?
              "  :  #{"<#{option.type}> " if option.type? }#{option.description if option.description?}"
            end
          %><%
   }
end

if actions? %>

Available actions:
<%
   actions.each { |action|
%>
    <%= action.name %><%= " -- #{action.description}" if action.description? %>
    <%= "Type \"#{name} help #{action.name}\" to get more information about action \"#{action.name}\"" if action.arguments? || action.options? || action.actions?%>
<%
   }
%>
<% end %>
