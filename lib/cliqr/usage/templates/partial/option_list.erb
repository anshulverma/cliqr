<% if options? %>
<%= bold('Available options:') %>
<%
   options.each { |option|
%>
    --<%=
    '[no-]' if option.boolean?
%><%=
    option.name
%><%=
    ", -#{option.short}" if option.short?
%><%=
    if option.details?
      "  : #{" <#{option.type}>" if option.type?}#{" #{option.description}" if option.description?}#{" (default => #{option.default.inspect})" if option.default?}"
    end
%><%
   }
end %>
